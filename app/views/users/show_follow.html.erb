<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィール", @user %></span>
      <span><b>所属グループ数:</b> <%= @groups.count %>グループ</span>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @groups_p.any? %>
      <ul class="groups follow">
        <%= render @groups_p %>
      </ul>
      <%= will_paginate @groups_p %>
    <% end %>
  </div>
</div>